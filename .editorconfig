# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.js]
indent_size = 2

[*.json]
indent_size = 2

[*.css]
indent_size = 2

[*.html]
indent_size = 2

[*.xml]
indent_size = 2

[{package.json}]
indent_size = 2
